{% extends 'base.html.twig' %}


{% block title %}Message reçu
{% endblock %}

{% block body%}

<h1 class="text-center pb-4"> Message Reçu </h1>

<table class="table text-center p-3">
	<thead>
		{#<th>pseudo</th>#}
		<th>Objet</th>
		<th>Message reçu</th>
		<th>Date</th>


		
		<button class="btn btn-primary">Répondre</button>
		


	</thead>
	<tbody>
		{% for message in messages %}
			<tr>
				<td>{{message.object}}</td>
				<td>{{message.message}}</td>
				<td>{{message.createdAt|ago}}</td>
			
			</tr>
		</tbody>
	{% else %}
		<tr>

			<td colspan="5">
				Vous n'avez reçu aucun message pour le moment 
			</td>
		</tr>
	{% endfor %}


    
</tbody>

</table>
{%endblock%}
