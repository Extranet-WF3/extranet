{% extends 'base.html.twig' %}

{% block title %} Liste des annonces {% endblock %}

{% block body %}


	<div class="example-wrapper">
		<div class="select">
			<select class="custom-select">
				<option selected>Date de publication</option>
				<option value="1">Dernière 24h</option>
				<option value="2">3 derniers jours</option>
				<option value="3">7 derniers jours</option>
			</select>

			<select class="custom-select ">
				<option selected>Posté par</option>
				<option value="1">Admin</option>
				<option value="2">les autres membres</option>

			</select>

			<select class="custom-select ">
				<option selected>Categories</option>
				<option value="1">Stage</option>
				<option value="2">Alternance</option>
				<option value="3">Emploi</option>
			</select>


		</div>
		<div class="select_1">
			<select class="custom-select ">
				<option selected>Entreprise</option>
				<option value="1">entrprise 1</option>
				<option value="2">entrprise 2</option>
				<option value="3">Entreprise 3</option>
			</select>

			<select class="custom-select ">
				<option selected>Type de poste</option>
				<option value="1">One</option>
				<option value="2">Two</option>
				<option value="3">Three</option>
			</select>


		</div>
		<div class="container">


			{% for announce in announces %}
				<div class="row">
					<div class="col-sm-6">
						<div class="card">
							<div class="card-body">
								<h3>
									<a href="{{ path('announce_show', {slug: announce.slug}) }}">{{ announce.nameCompany }}</a>
								</h3>
								<a href="{{ path('announce_show', {slug: announce.slug}) }}">
								<p class="card-text">{{ announce.description | u.truncate(20 , '...', false) }}.</p>
								</a>
							</div>
						</div>
					</div>
					
				</div>
			{% endfor %}
		</div>

	</div>


{% endblock %}
